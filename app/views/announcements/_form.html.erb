<%= form_with(model: announcement, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :classroom_id %>
    <%= form.text_field :classroom_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_field :text, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :materials %>
    <%= form.text_field :materials, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :creation_time %>
    <%= form.text_field :creation_time, value: l(announcement.creation_time), class: 'form-control', data: { controller: 'datetime' } %>
  </div>
  <div class="form-group">
    <div class="custom-control custom-checkbox">
      <%= form.check_box :all_students, class: 'custom-control-input' %>
      <%= form.label :all_students, class: 'custom-control-label' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :course_id %>
    <%= form.collection_select(:course_id, Course.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
