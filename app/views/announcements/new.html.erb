<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Announcements</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Announcements', announcements_path %></div>
      <div class="breadcrumb-item">New Announcement</div>
    </div>
  </div>
  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>New Announcement</h4>
      </div>
      <div class="card-body">
        <%= render 'form', announcement: @announcement %>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('far fa-arrow-left', 'Back'), announcements_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'New Announcement') %>
