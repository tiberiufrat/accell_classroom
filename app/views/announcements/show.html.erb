<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Announcements</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Announcements', announcements_path %></div>
      <div class="breadcrumb-item">Show Announcement</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Show Announcement</h4>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Classroom:</dt>
          <dd class="col-sm-9"><%= @announcement.classroom_id %></dd>
          <dt class="col-sm-3">Text:</dt>
          <dd class="col-sm-9"><%= @announcement.text %></dd>
          <dt class="col-sm-3">Materials:</dt>
          <dd class="col-sm-9"><%= @announcement.materials %></dd>
          <dt class="col-sm-3">Creation time:</dt>
          <dd class="col-sm-9"><%= l(@announcement.creation_time) %></dd>
          <dt class="col-sm-3">All students:</dt>
          <dd class="col-sm-9"><%= t(@announcement.all_students) %></dd>
          <dt class="col-sm-3">Course:</dt>
          <dd class="col-sm-9"><%= @announcement.course %></dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-edit', 'Edit'), edit_announcement_path(@announcement), class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('fas fa-arrow-left', 'Back'), announcements_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Announcement') %>
