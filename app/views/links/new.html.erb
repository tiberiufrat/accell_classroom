<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Links</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Links', links_path %></div>
      <div class="breadcrumb-item">New Link</div>
    </div>
  </div>
  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>New Link</h4>
      </div>
      <div class="card-body">
        <%= render 'form', link: @link %>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('far fa-arrow-left', 'Back'), links_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'New Link') %>
