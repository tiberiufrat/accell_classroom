<div class="card card-primary course-card">
  <div class="card-header" onclick="window.location='<%= course_path(course) %>'" style="cursor: pointer">
    <h4><%= course.name %></h4>
    <div class="card-header-action">
      <%= link_to icon('fas fa-users-class'), course.link, class: "btn btn-icon btn-sm btn-info", title: "", data: { toggle: "tooltip", placement: "top", 'original-title' => t('courses.index.view_in_classroom') } %>
    </div>
  </div>
  <div class="card-body">
    <div>
      <%= course.status_badge.html_safe %>
      <span class="badge badge-info"><%= t('attributes.code') %>: <code style="color: white; font-size: 110%;"><%= course.enrollment_code.upcase %></code></span>
    </div>
    <p>
      <div>
        <% unless course.course_work_materials.empty? %>
          <%= t('activerecord.models.course_work_material', count: course.course_work_materials.size) %>: <span class="badge badge-warning"><%= course.course_work_materials.size %></span>
        <% end %>
        <% unless course.course_works.empty? %>
          <%= t('activerecord.models.course_work', count: course.course_works.size) %>: <span class="badge badge-warning"><%= course.course_works.size %></span>
        <% end %>
        <% unless course.announcements.empty? %>
          <%= t('activerecord.models.announcement', count: course.announcements.size) %>: <span class="badge badge-warning"><%= course.announcements.size %></span>
        <% end %>
      </div>
  </div>
  <div class="card-footer bg-whitesmoke">
    <%= t('general.created_at') %> <%= l course.creation_time, format: "%-d %B %Y" %>
  </div>
</div>
