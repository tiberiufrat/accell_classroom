<%= form_with(model: course, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :classroom_id %>
    <%= form.text_field :classroom_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :section %>
    <%= form.text_field :section, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :creation_time %>
    <%= form.text_field :creation_time, value: l(course.creation_time), class: 'form-control', data: { controller: 'datetime' } %>
  </div>
  <div class="form-group">
    <%= form.label :enrollment_code %>
    <%= form.text_field :enrollment_code, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :course_state %>
    <%= form.text_field :course_state, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :link %>
    <%= form.text_field :link, class: 'form-control' %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
