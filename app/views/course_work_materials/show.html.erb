<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Course Work Materials</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Course Work Materials', course_work_materials_path %></div>
      <div class="breadcrumb-item">Show Course Work Material</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Show Course Work Material</h4>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Classroom:</dt>
          <dd class="col-sm-9"><%= @course_work_material.classroom_id %></dd>
          <dt class="col-sm-3">Title:</dt>
          <dd class="col-sm-9"><%= @course_work_material.title %></dd>
          <dt class="col-sm-3">Description:</dt>
          <dd class="col-sm-9"><%= @course_work_material.description %></dd>
          <dt class="col-sm-3">Materials:</dt>
          <dd class="col-sm-9"><%= @course_work_material.materials %></dd>
          <dt class="col-sm-3">Creation time:</dt>
          <dd class="col-sm-9"><%= l(@course_work_material.creation_time) %></dd>
          <dt class="col-sm-3">All students:</dt>
          <dd class="col-sm-9"><%= t(@course_work_material.all_students) %></dd>
          <dt class="col-sm-3">Course:</dt>
          <dd class="col-sm-9"><%= @course_work_material.course %></dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-edit', 'Edit'), edit_course_work_material_path(@course_work_material), class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('fas fa-arrow-left', 'Back'), course_work_materials_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Course Work Material') %>
