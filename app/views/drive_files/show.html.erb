<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Drive Files</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Drive Files', drive_files_path %></div>
      <div class="breadcrumb-item">Show Drive File</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Show Drive File</h4>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Classroom:</dt>
          <dd class="col-sm-9"><%= @drive_file.classroom_id %></dd>
          <dt class="col-sm-3">Title:</dt>
          <dd class="col-sm-9"><%= @drive_file.title %></dd>
          <dt class="col-sm-3">Link:</dt>
          <dd class="col-sm-9"><%= @drive_file.link %></dd>
          <dt class="col-sm-3">Thumbnail:</dt>
          <dd class="col-sm-9"><%= @drive_file.thumbnail %></dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('far fa-edit', 'Edit'), edit_drive_file_path(@drive_file), class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('far fa-arrow-left', 'Back'), drive_files_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Drive File') %>
