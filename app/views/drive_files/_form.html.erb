<%= form_with(model: drive_file, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :classroom_id %>
    <%= form.text_field :classroom_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :link %>
    <%= form.text_field :link, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :thumbnail %>
    <%= form.text_field :thumbnail, class: 'form-control' %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
