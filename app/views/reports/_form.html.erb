<%= form_with(model: report, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :date_start %>
    <%= form.text_field :date_start, value: l(report.date_start), class: 'form-control', data: { controller: 'datetime' } %>
  </div>
  <div class="form-group">
    <%= form.label :date_end %>
    <%= form.text_field :date_end, value: l(report.date_end), class: 'form-control', data: { controller: 'datetime' } %>
  </div>
  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select(:user_id, User.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
