<%= form_with(model: report, data: { controller: 'validation' }) do |form| %>

<div class="form-group" style="display: flex; justify-content: space-between; margin-bottom: 0">
  <div class="form-group" style="width: calc(50% - 5px)">
    <%= form.label :date_start %>
    <%= form.date_field :date_start, value: l(report.date_start), class: 'form-control' %>
  </div>
  <div class="form-group" style="width: calc(50% - 5px)">
    <%= form.label :date_end %>
    <%= form.date_field :date_end, value: l(report.date_end), class: 'form-control' %>
  </div>
</div>
  <div class="form-group">
    <%= form.label :user_id %>
    <%# form.collection_select(:user_id, User.all, :id, :name, {}, { class: 'form-control', readonly: true, data: { controller: 'select' } }) %>
    <%= form.text_field :user_id, value: current_user.name, class: 'form-control', readonly: true %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
