<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Forms</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Forms', forms_path %></div>
      <div class="breadcrumb-item">Show Form</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Show Form</h4>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Url:</dt>
          <dd class="col-sm-9"><%= @form.url %></dd>
          <dt class="col-sm-3">Response url:</dt>
          <dd class="col-sm-9"><%= @form.response_url %></dd>
          <dt class="col-sm-3">Title:</dt>
          <dd class="col-sm-9"><%= @form.title %></dd>
          <dt class="col-sm-3">Thumbnail:</dt>
          <dd class="col-sm-9"><%= @form.thumbnail %></dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-edit', 'Edit'), edit_form_path(@form), class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('fas fa-arrow-left', 'Back'), forms_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Form') %>
