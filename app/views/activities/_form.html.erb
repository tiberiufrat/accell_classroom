<%= form_with(model: activity, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :time %>
    <%= form.text_field :time, value: l(activity.time), class: 'form-control', data: { controller: 'datetime' } %>
  </div>
  <div class="form-group">
    <%= form.label :course_id %>
    <%= form.collection_select(:course_id, Course.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="form-group">
    <%= form.label :report_id %>
    <%= form.collection_select(:report_id, Report.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
