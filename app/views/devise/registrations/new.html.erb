            <div class="text-job text-muted"><%= t 'general.log_in_to_continue' %></div>
          </div>
          <div class="text-center">
            <%= link_to icon("fab fa-google", " " + t('general.log_in_google')), omniauth_authorize_path(:user, :google_oauth2), class: "btn btn-light btn-icon icon-left" %>
          </div>
        </div>
      </div>
      <div class="mt-5 text-muted text-center">
        <%= link_to t('general.back_to_root'), root_path %>
      </div>
