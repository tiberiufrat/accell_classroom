      </li>

      <li class="<%= active_nav_item('reports', 'index') %>">
        <%= link_to reports_path, class: "nav-link" do %>
          <i class="fas fa-file-chart-line"></i> <span><%= t('reports.index.title') %></span>
        <% end %>
      </li>

      <li class="<%= active_nav_item('reports', 'new') %>">
        <%= link_to new_report_path, class: "nav-link" do %>
