<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Course Works</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item">List of Course Works</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>List of Course Works</h4>
        <div class="card-header-action">
          <%= link_to icon('far fa-plus', 'New Course Work'), new_course_work_path, class: 'btn btn-icon icon-left btn-primary' %>
          <%= render 'shared/card_dropdown' do %>
            <%= link_to icon('far fa-download', 'Export Data'), course_works_path(format: :csv, q: request.params[:q]), class: 'dropdown-item has-icon' %>
            <%= link_to icon('far fa-print', 'Print Page'), 'javascript:window.print()', class: 'dropdown-item has-icon' %>
          <% end %>
        </div>
      </div>
      <div class="card-body" data-controller="infinite-page">
        <!--
        <#= search_form_for @search, remote: true, data: { controller: 'turbolinks-form' }, html: { class: 'form-row' } do |f| #>
          <div class="form-group col-sm-10">
            <#= f.text_field :name_cont, class: 'form-control m-input m-input--solid', placeholder: 'Name' #>
          </div>
          <div class="form-group col-sm-2 text-right">
            <#= f.button icon('far fa-search', 'Search'), name: nil, class: 'btn btn-icon icon-left btn-primary' #>
          </div>
        <# end #>
        -->
        <div class="table-responsive">
          <table class="table table-striped table-md">
            <thead>
              <tr>
                <th><%= sort_link_turbo(@search, :classroom_id) %></th>
                <th><%= sort_link_turbo(@search, :title) %></th>
                <th><%= sort_link_turbo(@search, :description) %></th>
                <th><%= sort_link_turbo(@search, :materials) %></th>
                <th><%= sort_link_turbo(@search, :creation_time) %></th>
                <th><%= sort_link_turbo(@search, :due_date) %></th>
                <th><%= sort_link_turbo(@search, :work_type) %></th>
                <th><%= sort_link_turbo(@search, :all_students) %></th>
                <th><%= sort_link_turbo(@search, :course) %></th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody data-target="infinite-page.container">
              <% @course_works.each do |course_work| %>
                <tr data-target="infinite-page.item">
                  <td><%= course_work.classroom_id %></td>
                  <td><%= course_work.title %></td>
                  <td><%= course_work.description %></td>
                  <td><%= course_work.materials %></td>
                  <td><%= l(course_work.creation_time) %></td>
                  <td><%= l(course_work.due_date) %></td>
                  <td><%= course_work.work_type %></td>
                  <td><%= t(course_work.all_students) %></td>
                  <td><%= course_work.course %></td>
                  <td>
                    <%= link_to icon('far fa-eye'), course_work, title: 'Show it', class: 'btn btn-icon btn-sm btn-info mr-1' %>
                    <%= link_to icon('far fa-edit'), edit_course_work_path(course_work), title: 'Edit it', class: 'btn btn-icon btn-sm btn-warning mr-1' %>
                    <%= link_to icon('far fa-trash'), course_work, title: 'Destroy it', class: 'btn btn-icon btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?', remote: true } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to 'Next page', course_works_path(page: @page.next_number, q: request.params[:q]), data: { target: 'infinite-page.more' } unless @page.last? %>
        </div>
      </div>
    </div>
  </div>
</section>

<% content_for(:page_title, 'List of Course Works') %>
